{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "database",
            "essential": true,
            "memory": 256,
            "memoryReservation": 256,
            "image":"mongo"
        },
        {
            "name": "background-worker",
            "essential": true,
            "memory": 256,
            "memoryReservation": 256,
            "image":"tattletech/service-background-worker:latest",
            "mountPoints":[
                {
                    "sourceVolume" : "data",
                    "containerPath" : "/app/data"
                }
            ]
        },
        {
            "name": "rest-api-server",
            "essential": true,
            "memory": 256,
            "memoryReservation": 256,
            "image":"tattletech/factcheck-scraper:latest",
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ]
        }
    ],
    "volumes":[
        {
            "name": "data",
            "host": {
                "sourcePath": "/var/app/current/data"
            }
        }
    ]
}